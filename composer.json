{
    "name": "kholisabdullah/weight-conversion-2",
    "description": "This is my package of weight conversion",
    "keywords": [
        "kholisabdullah",
        "weight-conversion-2"
    ],
    "homepage": "https://github.com/kholisabdullah/weight-conversion-2",
    "license": "MIT",
    "authors": [
        {
            "name": "Kholis Abdullah",
            "email": "kholis.abdullah@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "KholisAbdullah\\Weight\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KholisAbdullah\\Weight\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
